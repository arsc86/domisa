{% extends 'base.html.twig' %}
{% block javascripts%}
    {{ parent() }}
    <script src="{{ asset('./bundles/App/js/administracion/ubicacion/index.js') }}"></script>
{% endblock %} 
 
{% block contenido %}
    <div id="page-wrapper">
            <br>           
            <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-map-marker"></i>&nbsp;<b style="font-size: 16px;">Ubicacion</b>                
                <a href="{{path('newUbicacion')}}" style="float: right" class="btn btn-primary btn-circle"><i class="fa fa-plus"></i></a>
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                   <!-- <div class="table-responsive">-->
                        <table width="100%" class="table table-striped table-bordered table-hover" id="ubicacionDataTable" >
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nombre</th>
                                    <th>Descripcion</th>
                                    <th>Estado</th>
                                    <th>Usuario Ingreso</th>
                                    <th>Fecha Ingreso</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set cont = 1 %} 
                                {% for ubicacion in ubicaciones %}
                                <tr>
                                    <td>{{cont}}</td>
                                    <td>{{ubicacion.nombre}}</td>
                                    <td>{{ubicacion.descripcion}}</td>
                                    <td>{{ubicacion.estado}}</td>
                                    <td>{{ubicacion.usrCreacion}}</td>
                                    <td>{{ubicacion.feCreacion | date('m/d/Y H:i:s')}}</td>
                                    <td>
                                        <a class="fa fa-pencil" href="{{path('editUbicacion',{'id':ubicacion.idUbicacion})}}"></a>&nbsp;
                                        <a class="fa fa-times" href="{{path('deleteUbicacion',{'id':ubicacion.idUbicacion})}}"></a>
                                    </td>
                                </tr>
                                    {% set cont = cont + 1 %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
                <!-- /.row -->
            </div>
        </div>
{% endblock contenido%}
