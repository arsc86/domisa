<div id="page-wrapper">
      
    <div class="row">
        <div id="dash" class="col-lg-12">
            <h2 class="page-header">Dashboard</h2>           
        </div>
    </div>
    <!-- Pisos con sus respectivos equipos relacionados -->
    <div class="row">
         {% for ubicacion in ubicaciones %}
            <div class="col-lg-3 col-md-6">
                {%if ubicacion.caidos == 0 %}                    
                    <div class="panel panel-primary">
                {%else%}        
                    <div class="panel panel-red">
                {%endif%}        
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-tasks fa-4x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">{{ubicacion.numeroEquipos}}
                                    {%if ubicacion.caidos != 0 %}                    
                                    <i class="fa fa-warning"></i>
                                    {%endif%}
                                </div>
                                <div>{{ubicacion.nombre}}</div>
                                <div>{{ubicacion.descripcion}}</div>
                                
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-left">Ver Detalle Equipos</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
          {% endfor %}
        </div>
    </div>