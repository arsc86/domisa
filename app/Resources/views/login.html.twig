<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset='utf-8'">
        <title>{% block title %}Monitoreo{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        
        {% block stylesheets %}
            <link href="{{ asset('public/js/jquery-ui/jquery-ui.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('public/plugins/bootstrap/bower_components/bootstrap/dist/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('public/plugins/bootstrap/bower_components/bootstrap/dist/css/bootstrap.min.cssabs') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('public/plugins/bootstrap/dist/css/timeline.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('public/plugins/bootstrap/dist/css/sb-admin-2.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('public/plugins/bootstrap/bower_components/morrisjs/morris.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('public/plugins/bootstrap/bower_components/font-awesome/css/font-awesome.min.css') }}" type="text/css" rel="stylesheet" />
        {% endblock stylesheets%}
        {% block javascripts%}
            <script type="text/javascript" src="{{ asset('./public/js/jquery-ui/external/jquery/jquery.js') }}"></script>
            <script type="text/javascript" src="{{ asset('./public/js/jquery-ui/jquery-ui.js') }}"></script>
            <script type="text/javascript" src="{{ asset('./public/plugins/bootstrap/bower_components/jquery/dist/jquery.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('./public/plugins/bootstrap/bower_components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('./public/plugins/bootstrap/bower_components/metisMenu/dist/metisMenu.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('./public/plugins/bootstrap/bower_components/raphael/raphael-min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('./public/plugins/bootstrap/bower_components/morrisjs/morris.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('./public/plugins/bootstrap/js/morris-data.js') }}"></script>
            <script type="text/javascript" src="{{ asset('./public/plugins/bootstrap/dist/js/sb-admin-2.js') }}"></script>  
            
        {% endblock javascripts%}
    </head>
    <body>
        <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Sistema de Autenticacion</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="{{ path('auth') }}" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Usuario" name="usuario" type="usuario" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>
                                <div class="form-group">
                                    <h5>{{authFail}}</h5>
                                </div>
                                <input type="submit" value="Login" class="btn btn-lg btn-success btn-block">
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
</html>
